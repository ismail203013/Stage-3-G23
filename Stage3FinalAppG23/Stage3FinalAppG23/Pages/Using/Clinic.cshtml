@page
@model Stage3FinalAppG23.Pages.Using.ClinicModel
@{ ViewData["Title"] = "Clinic Details"; }

<div class="header-container">
    <img src="~/Images/Logo.png" width="75" height="50" />
    <div class="burger">
        <div class="row-1"></div>
        <div class="row-2"></div>
        <div class="row-3"></div>
    </div>
</div>
<div id="burger-menu">
    <nav>
        @if (string.IsNullOrEmpty(Model.Id))
        {
<a asp-page="/Using/Login">Register | Log In</a> }
            else
            {
<a asp-page="/Using/Account">Your Account</a>
                <a asp-page="/Using/SignOut">Sign Out</a>}
        <hr>
        <a asp-page="/Index">Submit</a>
        <a href="#">Track</a>
        <a href="#">Card Account</a>
        <a href="#">FAQ</a>
        <a href="#">Rebate Form</a>
        <a href="#">Contact Us</a>
    </nav>
</div>
<div id="progress-header">
    <div class="progress-bar-border">
        <div id="progress-bar"></div>
    </div>
    <h1>Confirm Your Clinic</h1>
    <p class="small-print-progress">Make sure your details are correct, then tap continue.</p>
</div>
<div class="section-container">
    <form method="post">
        <p class="small-print-main">Check your clinic details which we've imported from the uploaded receipt and your account details.</p>
        <div class="details-details">
            <h3>Clinic</h3>
            <div class="input-wrapper">
                <label>Clinic Name: <span>*</span></label>
                <input class="long-input" placeholder="Elanco Vet Clinic" required asp-for="Cln.Name" />
            </div>
            <div class="input-wrapper">
                <label>Clinic Street Address: <span>*</span></label>
                <input class="long-input" placeholder="123 Main Street" required asp-for="Cln.Address" />
            </div>
            <div class="input-wrapper">
                <label>Clinic State: <span>*</span></label>
                <input class="long-input" placeholder="California" required asp-for="Cln.state" />
            </div>

            <div class="short-input-fields">
                <div class="input-wrapper-short-1">
                    <label>Clinic Country: <span>*</span></label>
                    <input class="short-input" placeholder="US" required asp-for="Cln.country" />
                </div>
                <div class="input-wrapper-short-2">
                    <label>Clinic Zip Code: <span>*</span></label>
                    <input class="short-input" placeholder="60182" maxlength="5" required asp-for="Cln.zipcode" />
                </div>
            </div>
        </div>

        <div class="buttons">
            <button class="continue-button-input" type="submit">Continue</button>

            @if (!string.IsNullOrEmpty(Model.Id))
            {
<a class="back-button" asp-page="/Index">Back</a> }
            else
            {
<a class="back-button" asp-page="/Using/LogIn">Back</a>            }
        </div>
    </form>
</div>